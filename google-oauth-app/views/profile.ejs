<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Google OAuth App</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-2xl font-bold">Profile</h1>
                <a href="/auth/logout" 
                   class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                    Logout
                </a>
            </div>
            <% if (locals.user) { %>
                <div class="flex items-center border-b pb-6">
                    <% if (user.photo) { %>
                        <img src="<%= user.photo %>" 
                             alt="Profile Photo" 
                             class="w-20 h-20 rounded-full mr-4">
                    <% } else { %>
                        <div class="w-20 h-20 rounded-full mr-4 bg-gray-300 flex items-center justify-center">
                            <span class="text-2xl text-gray-600">
                                <%= user.displayName ? user.displayName.charAt(0).toUpperCase() : '?' %>
                            </span>
                        </div>
                    <% } %>
                    <div>
                        <h2 class="text-xl font-semibold"><%= user.displayName || 'N/A' %></h2>
                        <p class="text-gray-600"><%= user.email || 'No email provided' %></p>
                    </div>
                </div>
                <div class="mt-6">
                    <h3 class="font-semibold mb-2">Profile Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-gray-600">First Name</p>
                            <p class="font-medium"><%= user.firstName || 'N/A' %></p>
                        </div>
                        <div>
                            <p class="text-gray-600">Last Name</p>
                            <p class="font-medium"><%= user.lastName || 'N/A' %></p>
                        </div>
                        <div>
                            <p class="text-gray-600">Google ID</p>
                            <p class="font-medium"><%= user.googleId || 'N/A' %></p>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="text-center py-8">
                    <p class="text-gray-600">Please log in to view your profile.</p>
                    <a href="/" class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                        Go to Login
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>